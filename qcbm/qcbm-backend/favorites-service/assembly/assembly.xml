<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd http://maven.apache.org/ASSEMBLY/2.0.0">

    <id>release</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>favorites-service.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory>config</outputDirectory>
            <fileMode>0644</fileMode>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../skywalking-agent</directory>
            <includes>
                <include>activations/**</include>
                <include>bootstrap-plugins/**</include>
                <include>optional-reporter-plugins/**</include>
                <include>plugins/**</include>
                <include>skywalking-agent.jar</include>
            </includes>
            <outputDirectory>skywalking</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../skywalking-agent/config/agent-4-favorites.config</source>
            <outputDirectory>skywalking/config</outputDirectory>
            <destName>agent.config</destName>
        </file>
        <file>
            <source>${project.build.directory}/${project.name}-${project.version}.jar</source>
            <outputDirectory>/boot</outputDirectory>
            <fileMode>0755</fileMode>
            <destName>${project.name}.jar</destName>
        </file>
    </files>
</assembly>